# Gunakan image PHP dengan FPM
FROM php:8.4-fpm

# Install dependencies sistem yang dibutuhkan Laravel
RUN apt-get update && apt-get install -y \
    git curl zip unzip libpng-dev libjpeg-dev libfreetype6-dev libonig-dev libxml2-dev \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd

# Install Composer
COPY --from=composer:2.6 /usr/bin/composer /usr/bin/composer

# Set working directory
WORKDIR /var/www

# Copy file Laravel ke dalam container
COPY . .

# Install dependencies Laravel tanpa package dev
RUN composer install --no-dev --optimize-autoloader

# Copy .env.example jadi .env kalau belum ada
RUN if [ ! -f .env ]; then cp .env.example .env; fi

# FORCE MySQL configuration dengan environment variables
ENV DB_CONNECTION=mysql
ENV DB_HOST=mysql-production-df57.up.railway.app
ENV DB_PORT=3306
ENV DB_DATABASE=railway
ENV DB_USERNAME=root
ENV DB_PASSWORD=ktgITtjjPYEQAaUpPxxEiwPvLUTKXTNy

# Force session dan cache menggunakan file (bukan sqlite)
ENV SESSION_DRIVER=file
ENV CACHE_DRIVER=file
ENV QUEUE_CONNECTION=sync

# Hapus baris SESSION_CONNECTION dari .env jika ada
RUN sed -i '/SESSION_CONNECTION/d' .env

# Generate APP_KEY (hanya jika belum ada)
RUN php artisan key:generate --force || true

# Clear cache dan optimasi
RUN php artisan config:clear && \
    php artisan route:clear && \
    php artisan view:clear

# Jalankan migration (tambahkan --force untuk production)
RUN php artisan migrate --force

# Cache config dan route untuk production
RUN php artisan config:cache && \
    php artisan route:cache && \
    php artisan view:cache

# Expose port (Railway akan deteksi ini)
EXPOSE 8000

# Jalankan Laravel dengan PHP built-in server
CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=8000"]